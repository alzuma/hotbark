{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "declaration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "./src/setupTests.ts",
    "**/__mocks__/*",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
